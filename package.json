{
  "name": "sign-partners",
  "version": "1.0.0",
  "description": "Sign Partners, Inc. website",
  "author": "flintinatux",
  "license": "UNLICENSED",
  "main": "index.js",
  "scripts": {
    "build": "run-p build:*",
    "build:scripts": "browserify client/app.js > dist/assets/app.js",
    "build:styles": "lessc client/app.less | postcss -u autoprefixer | cleancss --s0 > dist/assets/app.css",
    "build:templates": "NODE_ENV=production pug -O data.json -o dist client/*.pug",
    "clean": "rm -rf dist/* && mkdir -p dist/assets",
    "hint": "jshint --reporter=node_modules/jshint-stylish client",
    "postbuild": "ccjs dist/assets/app.js --warning_level=QUIET > dist/assets/app-min.js",
    "prebuild": "npm run clean",
    "prewatch": "npm run clean",
    "prewatch:hint": "jshint --reporter=node_modules/jshint-stylish client; exit 0",
    "prewatch:styles": "npm run build:styles",
    "serve": "browser-sync start -s dist -f dist --port 4000 --no-open --no-notify --extensions *.html",
    "watch": "run-p watch:*",
    "watch:hint": "eye --*glob=client/**/*.js npm run prewatch:hint",
    "watch:scripts": "watchify client/app.js -d -v -o dist/assets/app.js",
    "watch:styles": "eye --*glob=client/**/*.less npm run build:styles",
    "watch:templates": "pug -O ./data.json -o dist -w client/*.pug"
  },
  "browserify": { "transform": [ "brfs" ] },
  "dependencies": {
    "autoprefixer": "^6.3.6",
    "brfs": "^1.4.3",
    "browserify": "^13.0.1",
    "clean-css": "^3.4.17",
    "closurecompiler": "^1.5.3",
    "eventemitter3": "^1.2.0",
    "font-awesome": "^4.6.3",
    "less": "^2.7.1",
    "normalize.css": "^4.1.1",
    "postcss-cli": "^2.5.2",
    "puddles": "^0.1.5",
    "pug-cli": "^1.0.0-alpha6",
    "ramda": "^0.21.0"
  },
  "devDependencies": {
    "browser-sync": "^2.13.0",
    "eye": "0.0.3",
    "jshint": "^2.9.2",
    "jshint-stylish": "^2.2.0",
    "npm-run-all": "^2.3.0",
    "watchify": "^3.7.0"
  }
}
