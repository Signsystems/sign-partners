mixin header(page)
  nav.header
    h1.brand
      a(href='/') Sign Partners, Inc.
    a.page(href='/about.html' class={ active: page == 'about' }) About
    a.page(href='/signs.html' class={ active: page == 'signs' }) Signs
    a.page(href='/services.html' class={ active: page == 'services' }) Services
    a.page(href='/contact.html' class={ active: page == 'contact' }) Contact
